<%- include('../partials/head-html.ejs') %>
<link rel="stylesheet" href="/stylesheets/flights/forms.css" />
<%- include('../partials/nav.ejs') %>

<main>
<h1><%= title %></h1>
<form id="new-form" action="/flights/<%= flight._id %>?_method=PUT" method="POST">
    <label for="airline-input">Airline:</label>
    <select name="airline" value="<%= title.airline %>" id="airline">
        <option value="American">American</option>
        <option value="Southwest">Southwest</option>
        <option value="United">United</option>
    </select>
    <label for="airport">Airport:</label>
    <select name="airport" value="<%= flight.airp %>" id="airport">
        <option value="AUS" selected>AUS</option>
        <option value="DEN" selected>DEN</option>
        <option value="LAX" selected>LAX</option>
        <option value="SAN" selected>SAN</option>
    </select>
    <label for="flightNo">Flight #:</label>
    <input type="number" name="flightNo" min="10" max="9999" id="flightNo" placeholder="10 - 9999" value="<%= flight.flightNo %>">
    <label for="departs-input">Departs:</label>
    <input type="datetime-local" id="departs-input"
    name="departs" value="<%=Date()%>"
    min="2023-04-17T00:00" max="2523-04-17T00:00" value="<%= flight.departs %>">
    

    <button type="submit">Save Flight</button>
</form>
</main>

<%- include('../partials/footer.ejs') %>